.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 24rpx;
  box-sizing: border-box;
  overflow: scroll;
} 

.container-flex {
  width: 500rpx;
  margin: 0 auto;
  text-align: center;
  /* justify-content: center ;  */
}

.h1 {
  color: white;
  font-size: 80rpx;
  text-align: center;
}

.h2 {
  color: white;
  font-size: 60rpx;
  text-align: center;
}

.btn {
  background-image: linear-gradient(60deg, #014e8de8, #f8a63ae8);
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  width: 200rpx;
  color: white;
  text-align: center;
  /* box-shadow:; */
}


.card {
  padding: 40rpx;
  margin: 40rpx;
  border-radius: 16rpx;
  background:rgba(256, 256, 256, 0.55);
  box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
  /* display: flex; */
  /* align-items: center; */
}
.card:hover {
  box-shadow: 0 0 30rpx rgba(50, 50, 50, 0.5);
}

.card .h2 {
  font-size: 16px;
  font-weight: bold;
  margin: 0;
}

.card text {
  font-size: 12px;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 0;
  margin-top: 8px;
}
